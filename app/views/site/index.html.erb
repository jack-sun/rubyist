<% content_for(:title) do %>
    首页
<% end %>
<div class="container">
    <table class="table table-striped  span8">
        <% @articles.each do |article| %>
            <tr>
                <td>
                    <%= link_to(article.title, article_path(article)) %>
                </td>
                <td>
                    <%= link_to(article.user_nick_name, user_path(article.user), :class => "pull-right")%>
                </td>
            </tr>
        <% end %>
        <tr>
            <td colspan="2">
                <%= link_to '发表文章', new_article_path, :class => "btn" %>
            </td>
        </tr>
    </table>
</div>

