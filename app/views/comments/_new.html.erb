<div class="reply">
    <%= form_for([article, comment]) do |f| %>
        <% if comment.errors.any? %>
            <div id="error_explanation">
                <ul>
                    <% comment.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="field">
            <%= f.hidden_field :parent_id, :value => params[:parent_id] %>
            <%= f.label :body, "回复" %><br />
            <%= f.text_area :body, :cols => 80, :rows => 20 %>
        </div>
        <div class="actions">
            <%= f.submit("发表") %>
        </div>
    <% end %>
</div>

