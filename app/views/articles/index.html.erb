<h1>所有文章</h1>
<ul class="articles-list">
	<% @articles.each do |article| %>
	<li>
		<%= link_to(article.title, article_path(article)) %>
		<span class="quiet small">更新于：<%= article.updated_at.to_s(:db)%></span>
	</li>
	<% end %>
</ul>
<%= paginate @articles %>
<%= link_to '发表文章', new_article_path %>