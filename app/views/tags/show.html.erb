<% content_for(:title) do %>
    <%= @tag.name %>
<% end %>
<h2><%= @tag.name %></h2>
<div class="container">
    <ul>
        <% @articles.each do |article| %>
            <li>
                <%= link_to article.title, article_path(article) %>
            </li>
        <% end %>
    </ul>
</div>
<%= paginate @articles %>
