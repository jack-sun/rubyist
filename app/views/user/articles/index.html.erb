<% content_for(:title) do %>
    <%= @user.nick_name %>的文章
<% end %>
<h2><%= @user.nick_name %>的文章</h2>
<div class="container">
    <ul class="articles-list">
        <% @articles.each do |article| %>
            <li>
                <%= link_to(article.title, user_article_path(@user, article)) %>
            </li>
        <% end %>
    </ul>
</div>
<%= paginate @articles %>
