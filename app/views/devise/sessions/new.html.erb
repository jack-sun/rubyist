<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html =>{:class => "well form-horizontal"}) do |f| %>
    <p><%= f.label :email, "邮箱" %>
        <%= f.email_field :email %></p>

    <p><%= f.label :password, "密码" %>
        <%= f.password_field :password %></p>

    <% if devise_mapping.rememberable? -%>
        <p>
            <label for="user_remember_me" class="checkbox">
                <%= f.check_box :remember_me %> 记住我？
            </label>
        </p>
    <% end -%>

    <p><%= f.submit "登录", :disable_with => '请稍等...', :class => "btn btn-primary" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
